<h1>Listing offices</h1>

<table>
  <tr>
    <th>Id</th>
    <th>User</th>
    <th>Address</th>
    <th>Rep name</th>
    <th>Tel</th>
    <th>Tel2</th>
    <th>Mail2</th>
    <th>Caption</th>
    <th>Logo</th>
    <th>Last login</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offices.each do |office| %>
  <tr>
    <td><%= office.id %></td>
    <td><%= office.user_id %></td>
    <td><%= office.address %></td>
    <td><%= office.rep_name %></td>
    <td><%= office.tel %></td>
    <td><%= office.tel2 %></td>
    <td><%= office.mail2 %></td>
    <td><%= office.caption %></td>
    <td><%= office.logo %></td>
    <td><%= office.last_login %></td>
    <td><%= link_to 'Show', office %></td>
    <td><%= link_to 'Edit', edit_office_path(office) %></td>
    <td><%= link_to 'Destroy', office, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

